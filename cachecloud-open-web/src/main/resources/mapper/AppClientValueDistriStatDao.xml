<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sohu.cache.dao.AppClientValueDistriStatDao">
	<sql id="columns">
		app_id,collect_time,client_ip,report_time,create_time,command,distribute_value,distribute_type,count,instance_host,instance_port,instance_id
	</sql>

	<insert id="save" parameterType="AppClientValueDistriStat"
		keyProperty="id" useGeneratedKeys="true">
		insert into app_client_value_distri_minute_stat(<include refid="columns" />)
		values(#{appId},#{collectTime},#{clientIp},#{reportTime},#{createTime},#{command},#{distributeValue},#{distributeType},#{count},#{instanceHost},#{instancePort},#{instanceId})
	</insert>
	
	<insert id="batchSave">
		insert into app_client_value_distri_minute_stat(<include refid="columns" />)
		values
		<foreach collection="appClientValueDistriStatList" item="valueDistri" separator=",">
        	(#{valueDistri.appId},#{valueDistri.collectTime},#{valueDistri.clientIp},#{valueDistri.reportTime},#{valueDistri.createTime},#{valueDistri.command},
        	#{valueDistri.distributeValue},#{valueDistri.distributeType},#{valueDistri.count},#{valueDistri.instanceHost},#{valueDistri.instancePort},#{valueDistri.instanceId})
	    </foreach>
	</insert>
	
	<select id="getAppValueDistriList" resultType="AppClientValueDistriSimple">
    	select distribute_value,distribute_type, sum(count) as count
    	from app_client_value_distri_minute_stat
    	where app_id=#{appId} and collect_time between #{startTime} and #{endTime}
        group by distribute_value order by distribute_type
    </select>
    
    <select id="getTableMinimumId" resultType="long">
    	select id from app_client_value_distri_minute_stat order by id limit 1
    </select>
    
    <select id="getMinimumIdByCollectTime" resultType="long">
    	select id from app_client_value_distri_minute_stat where collect_time >= #{collectTime} order by id limit 1
    </select>
    
    <delete id="deleteByIds">
    	delete from app_client_value_distri_minute_stat where id>=#{startId} and id &lt;#{endId}
    </delete>

</mapper>